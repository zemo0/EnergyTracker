<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="850.0" styleClass="createNewAccountScreenAnchorPane" stylesheets="@style.css"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.javafx.CreateNewAccountScreenController">
    <GridPane layoutX="-2.0" layoutY="-3.0" prefHeight="607.0" prefWidth="859.0">
      <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
      </columnConstraints>
      <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
      </rowConstraints>
        <children>
          <Label text="Create new account" textFill="WHITE" GridPane.columnIndex="1" GridPane.halignment="CENTER">
              <font>
                  <Font size="30.0"/>
              </font>
          </Label>
          <Button mnemonicParsing="false" onAction="#onButtonClick" prefHeight="5.0" prefWidth="100.0"
                  style="-fx-background-color: #1E90FF;" text="Create" textFill="WHITE" GridPane.columnIndex="1"
                  GridPane.halignment="CENTER" GridPane.rowIndex="4">
              <font>
                  <Font size="16.0"/>
              </font>
          </Button>
          <Label text="Role:" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="1"
                 GridPane.valignment="TOP">
              <GridPane.margin>
                  <Insets top="10.0"/>
              </GridPane.margin>
              <font>
                  <Font size="20.0"/>
              </font>
          </Label>
          <Label fx:id="randomText" stylesheets="@style.css" text="Username:" textFill="WHITE"
                 GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.valignment="TOP">
              <GridPane.margin>
                  <Insets top="10.0"/>
              </GridPane.margin>
              <font>
                  <Font size="20.0"/>
              </font>
          </Label>
          <TextField fx:id="usernameTextField"
                     style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-width: 0px 0px 2px 0px; -fx-text-fill: white;"
                     GridPane.columnIndex="1" GridPane.rowIndex="2">
              <font>
                  <Font size="18.0"/>
              </font>
          </TextField>
          <Label text="Password:" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="3"
                 GridPane.valignment="TOP">
              <font>
                  <Font size="20.0"/>
              </font>
              <GridPane.margin>
                  <Insets top="10.0"/>
              </GridPane.margin>
          </Label>
          <PasswordField fx:id="passwordTextField"
                         style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-width: 0px 0px 2px 0px; -fx-text-fill: white;"
                         GridPane.columnIndex="1" GridPane.rowIndex="3">
              <font>
                  <Font size="18.0"/>
              </font>
          </PasswordField>
          <ComboBox fx:id="roleSelectorComboBox" prefHeight="26.0" prefWidth="286.0"
                    promptText="Odaberi rolu koju korisnik ima" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        </children>
    </GridPane>
</AnchorPane>
